@model GrocceryShopping.Models.Category

@{
    ViewBag.Title = "Category Update";
}
<h2>Add Category</h2>

<form method="POST" action="/Category/UpdateCategory/@Model.CategoryID">
    <div class="form-group">
        <label for="categoryTitle">Category Title</label>
        <input type="text" class="form-control" id="CategoryTitle" name="CategoryTitle" aria-describedby="CategoryTitle" placeholder="Enter category title" value="@Model.CategoryTitle" required>
    </div>
    <button type="submit" class="btn btn-primary">Update Category</button>
</form>